<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/my_camera_view1"
        android:layout_width="465dp"
        android:layout_height="348.75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="215dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="500dp"
        android:layout_weight="1"
        android:visibility="visible"
        tools:visibility="visible" />

    <SurfaceView
        android:id="@+id/my_camera_view2"
        android:layout_width="350dp"
        android:layout_height="262.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="433dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:visibility="visible"
        tools:visibility="visible" />

    <SurfaceView
        android:id="@+id/my_camera_view3"
        android:layout_width="350dp"
        android:layout_height="262.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/my_text_view1"
        android:layout_width="350dp"
        android:layout_height="262.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:gravity="center"
        android:visibility="visible"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/my_text_view2"
        android:layout_width="350dp"
        android:layout_height="262.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="433dp"
        android:layout_marginLeft="433dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:gravity="center"
        android:visibility="visible"
        tools:visibility="visible" />

</RelativeLayout>